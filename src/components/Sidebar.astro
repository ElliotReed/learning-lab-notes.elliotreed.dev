---
import type { TocItem } from "@/plugins/remark-collect-headings";

const { toc } = Astro.props;
---

<aside class="sidebar">
    <ul>
        {
            toc.map((heading: TocItem) => {
                return (
                    <li>
                        <a href={`#${heading.slug}`}>{heading.text}</a>
                    </li>
                );
            })
        }
    </ul>
</aside>

<style>
    .sidebar ul {
        list-style: none;
        padding: 1em;
        background: #333;
        font-size: 0.85em;
        border-radius: 6px;
        width: 100%

        a {
            display: block;
            padding-block: 0.5em;
            padding-inline: 1em;
            margin-block: 0.2em;
        }

        ul {
            margin-top: 0.5em;
            list-style: none;
            padding-left: 0.5em;

            li {
                background: #222;
            }
        }
    }
</style>
