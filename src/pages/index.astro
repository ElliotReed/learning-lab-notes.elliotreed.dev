---
import { Image } from "astro:assets";
import MainLayout from "@/layouts/MainLayout.astro";
// import Card from "../components/Card.astro";
import notesImage from "@images/learning-lab-notes.jpg";
---

<MainLayout page={{ title: "Home Page", description: "" }}>
    <div class="home-page">
        <div class="hero">
            <Image src={notesImage} alt="" class="hero__image" />
            <h1 class="text-gradient">Learning Lab Notes</h1>
            <p>A personal collection of developer notes.</p>
        </div>
    </div>
</MainLayout>

<style lang="scss">
    @use "@/styles/semantic" as *;
    @use "sass:color";

    .home-page {
        display: block;
    }

    .hero {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-template-rows: repeat(12, 1fr);
        overflow: hidden;
        max-height: 75vh;

        &__image {
            grid-column: 1 / -1;
            grid-row: 1 / -1;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }
    }

    h1 {
        grid-column: 1 / -1;
        grid-row: 2 / 10;
        margin: 0;
        font-size: 6rem;
        color: $clr-primary;
        line-height: 1;
        text-align: center;
    }

    .text-gradient {
        background-image: linear-gradient(
            180deg,
            $clr-primary,
            color.adjust($clr-primary, $lightness: 20%)
        );
        background-position: 0%;
        background-size: 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    p {
        grid-column: 2 / 9;
        grid-row: 11;
        font-style: oblique;
        font-weight: bold;
        color: $clr-primary;
    }
</style>
